# Dazzle Backend Container - FastAPI with SQLite
# Builds Dazzle from source and runs only the API server
#
# Build args:
#   PROJECT_PATH: Path to the Dazzle project to serve (e.g., examples/simple_task)
#
# Usage:
#   docker build -f tests/e2e/docker/Dockerfile.backend -t dazzle-backend --build-arg PROJECT_PATH=examples/simple_task .
#   docker run -p 8000:8000 -e DAZZLE_ENV=test dazzle-backend

FROM python:3.11-slim

# Build argument for the project to serve
ARG PROJECT_PATH=examples/simple_task

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /dazzle

# Copy Python source code
COPY pyproject.toml ./
COPY src/ ./src/

# Install Dazzle in editable mode with runtime dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn[standard] \
    aiosqlite \
    && pip install --no-cache-dir -e .

# Copy the project to serve
COPY ${PROJECT_PATH} /project

# Set working directory to project
WORKDIR /project

# Create data directory
RUN mkdir -p /project/.dazzle

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV DAZZLE_HOST=0.0.0.0
ENV DAZZLE_API_PORT=8000
ENV DAZZLE_DB_PATH=/project/.dazzle/data.db
ENV DAZZLE_ENV=test

# Expose API port only
EXPOSE 8000

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run Dazzle backend only (API server without UI)
# Explicit port to override deterministic allocation (matches EXPOSE and health check)
CMD ["python", "-m", "dazzle.cli", "serve", "--local", "--backend-only", "--test-mode", "--host", "0.0.0.0", "--api-port", "8000"]
