{
  "$schema": "https://dazzle.dev/schemas/design-tokens-v1.json",
  "version": "1.0.0",
  "name": "dazzle-default",
  "description": "Dazzle Design Tokens (DDT) - LLM-first design system foundation",

  "color": {
    "$description": "Color palette organized by semantic role",

    "background": {
      "default": "#ffffff",
      "subtle": "#f8fafc",
      "muted": "#f1f5f9",
      "inverse": "#0f172a"
    },

    "foreground": {
      "default": "#0f172a",
      "muted": "#64748b",
      "subtle": "#94a3b8",
      "inverse": "#ffffff"
    },

    "border": {
      "default": "#e2e8f0",
      "muted": "#f1f5f9",
      "focus": "#3b82f6"
    },

    "intent": {
      "primary": {
        "default": "#3b82f6",
        "hover": "#2563eb",
        "active": "#1d4ed8",
        "foreground": "#ffffff"
      },
      "secondary": {
        "default": "#64748b",
        "hover": "#475569",
        "active": "#334155",
        "foreground": "#ffffff"
      },
      "success": {
        "default": "#22c55e",
        "hover": "#16a34a",
        "active": "#15803d",
        "foreground": "#ffffff",
        "background": "#f0fdf4",
        "border": "#bbf7d0"
      },
      "warning": {
        "default": "#f59e0b",
        "hover": "#d97706",
        "active": "#b45309",
        "foreground": "#ffffff",
        "background": "#fffbeb",
        "border": "#fde68a"
      },
      "danger": {
        "default": "#ef4444",
        "hover": "#dc2626",
        "active": "#b91c1c",
        "foreground": "#ffffff",
        "background": "#fef2f2",
        "border": "#fecaca"
      },
      "info": {
        "default": "#0ea5e9",
        "hover": "#0284c7",
        "active": "#0369a1",
        "foreground": "#ffffff",
        "background": "#f0f9ff",
        "border": "#bae6fd"
      }
    }
  },

  "space": {
    "$description": "Spacing scale using 4px base unit",
    "0": "0",
    "px": "1px",
    "0.5": "0.125rem",
    "1": "0.25rem",
    "1.5": "0.375rem",
    "2": "0.5rem",
    "2.5": "0.625rem",
    "3": "0.75rem",
    "3.5": "0.875rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "7": "1.75rem",
    "8": "2rem",
    "9": "2.25rem",
    "10": "2.5rem",
    "12": "3rem",
    "14": "3.5rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },

  "radius": {
    "$description": "Border radius values",
    "none": "0",
    "sm": "0.125rem",
    "default": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },

  "shadow": {
    "$description": "Box shadow definitions",
    "none": "none",
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "default": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
    "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)"
  },

  "font": {
    "$description": "Typography definitions",

    "family": {
      "base": "ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji'",
      "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace"
    },

    "size": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },

    "weight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },

    "lineHeight": {
      "none": "1",
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    },

    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em"
    }
  },

  "transition": {
    "$description": "Motion and timing",
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "timing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    }
  },

  "breakpoint": {
    "$description": "Responsive breakpoints",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "zIndex": {
    "$description": "Z-index scale for layering",
    "base": "0",
    "dropdown": "1000",
    "sticky": "1020",
    "fixed": "1030",
    "overlay": "1040",
    "modal": "1050",
    "popover": "1060",
    "tooltip": "1070"
  }
}
