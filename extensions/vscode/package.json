{
  "name": "dazzle-dsl",
  "displayName": "DAZZLE DSL",
  "description": "Language support for DAZZLE DSL - DSL-first application development with 50x faster CLI",
  "version": "0.14.0",
  "publisher": "dazzle",
  "repository": {
    "type": "git",
    "url": "https://github.com/dazzle/dazzle"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "dazzle",
    "dsl",
    "django",
    "api",
    "code-generation"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:dazzle.toml",
    "workspaceContains:**/*.dsl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "dazzle-dsl",
        "aliases": [
          "DAZZLE",
          "Dazzle DSL"
        ],
        "extensions": [
          ".dsl",
          ".dazzle"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "dazzle-dsl",
        "scopeName": "source.dazzle",
        "path": "./syntaxes/dazzle.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DAZZLE",
      "properties": {
        "dazzle.cliPath": {
          "type": "string",
          "default": "dazzle",
          "description": "Path to the DAZZLE CLI executable (e.g., 'dazzle', 'python -m dazzle.cli', or absolute path)"
        },
        "dazzle.manifest": {
          "type": "string",
          "default": "dazzle.toml",
          "description": "Name of the DAZZLE manifest file"
        },
        "dazzle.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate DSL files on save"
        },
        "dazzle.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python interpreter with dazzle installed (leave empty to auto-detect)"
        },
        "dazzle.llm.provider": {
          "type": "string",
          "enum": [
            "anthropic",
            "openai"
          ],
          "default": "anthropic",
          "description": "LLM provider for spec analysis (anthropic or openai)"
        },
        "dazzle.llm.model": {
          "type": "string",
          "default": "claude-3-5-sonnet-20241022",
          "description": "LLM model to use (e.g., claude-3-5-sonnet-20241022, gpt-4-turbo)"
        },
        "dazzle.llm.maxCostPerAnalysis": {
          "type": "number",
          "default": 1,
          "description": "Maximum cost per spec analysis in USD (warning shown if exceeded)"
        }
      }
    },
    "commands": [
      {
        "command": "dazzle.validate",
        "title": "DAZZLE: Validate Project",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.build",
        "title": "DAZZLE: Build Project",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.lint",
        "title": "DAZZLE: Lint Project (Strict Check)",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.dev",
        "title": "DAZZLE: Start Dev Server",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.test",
        "title": "DAZZLE: Run Tests",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.eject",
        "title": "DAZZLE: Eject to Standalone Code",
        "category": "DAZZLE"
      },
      {
        "command": "dazzle.askClaudeToAnalyze",
        "title": "DAZZLE: Ask Claude to Analyze SPEC",
        "category": "DAZZLE + Claude"
      },
      {
        "command": "dazzle.askClaudeToFix",
        "title": "DAZZLE: Ask Claude to Validate & Fix",
        "category": "DAZZLE + Claude"
      },
      {
        "command": "dazzle.askClaudeToBuild",
        "title": "DAZZLE: Ask Claude to Build",
        "category": "DAZZLE + Claude"
      },
      {
        "command": "dazzle.askClaudeToInit",
        "title": "DAZZLE: Ask Claude to Initialize Project",
        "category": "DAZZLE + Claude"
      }
    ],
    "problemMatchers": [
      {
        "name": "dazzle",
        "owner": "dazzle",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "dazzle",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The DAZZLE task to execute (validate, build, lint)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "esbuild-base": "node esbuild.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run compile-tests",
    "test": "vscode-test",
    "test:integration": "vscode-test",
    "test:python": "npm run compile-tests && npx mocha out/test/python-discovery.test.js --timeout 30000",
    "lint": "tsc --noEmit",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.19.30",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^3.2.0",
    "esbuild": "^0.27.2",
    "glob": "^11.0.0",
    "mocha": "^11.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
