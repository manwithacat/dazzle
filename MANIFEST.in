# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md

# Include type stubs
recursive-include src/dazzle py.typed *.pyi

# Include templates
recursive-include src/dazzle/templates *.dsl *.toml *.md .gitignore

# Include DNR runtime static files (JS, CSS)
recursive-include src/dazzle_dnr_ui/runtime/static *.js *.css

# Include test data but not test code
recursive-include tests/fixtures *.dsl *.toml

# Exclude
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
